<div class="container">
    <div class="filter_options">
        <div class="row">
            <div class="col-12 col-lg-10 col-md-10 col-sm-12">
                <form action="/maintenance/labsfilter" method="post">
                    <div class="row">
                        <div class="col-12 col-lg-6 col-md-6 col-sm-12">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Ubicación</label>
                                </div>
                                <select class="custom-select" id="inputGroupSelect01" name="filtro">
                                    <option value="">Todos</option>
                                    {{#each building}}
                                    <option value="{{ubicacion}}">{{ubicacion}}</option>
                                    {{/each}}
                                </select>
                                <div class="input-group-append">
                                    <button class="btn modal-confirm-button">Aplicar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-12 col-lg-2 col-md-2 col-sm-12">
                <button class="btn btn-outline-secondary mb-4" data-toggle="modal" data-target="#labs-add-modal">Agregar
                    laborarorio</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h5 class="text-center">LABORATORIOS</h5>
</div>

<div class="container">
    <div class="tabla">
        <table class="table table-hover">
            <thead class="thead-style">
                <tr>
                    <th>ID</th>
                    <th>Ubicación</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="table-body">
                {{#each labs}}
                <tr>
                    <td>{{id_laboratorio}}</td>
                    <td>{{ubicacion}}</td>
                    <td>{{descripcion}}</td>
                    <td class="action-buttons">
                        <button class="btn btn-editar mr-3" data-toggle="modal"
                            data-target="#labs-edit-modal{{id_laboratorio}}"><i
                                class="fa-solid fa-pen-to-square"></i></button>

                        <button class="btn btn-eliminar" data-toggle="modal"
                            data-target="#labs-delete-modal{{id_laboratorio}}"><i
                                class="fa-solid fa-trash-can"></i></button>
                    </td>
                </tr>
                {{> modals/labsedit }}
                {{> modals/labsdelete }}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

