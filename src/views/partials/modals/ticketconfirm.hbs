{{!-- MODAL PARA AGREGAR UN NUEVO MANTENIMIENTO--}}
<div class="modal fade" id="ticket-confirm-modal{{id_ticket}}" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Autorizar ticket: {{id_ticket}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/maintenance/ticketsconfirm/{{id_ticket}}" method="post">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Computadora: {{fk_numserie}}</label>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Responsable: {{nombre}}</label>
                    </div>
                    <label for="recipient-name" class="col-form-label">Tipo de mantenimiento</label>
                    <select class="custom-select" id="inputGroupSelect01" name="tipo">
                        <option value="1">Inicial</option>
                        <option value="2">Preventivo</option>
                        <option value="3">Correctivo</option>
                        <option value="4">Otro</option>
                    </select>
                    <div class="modal-footer">
                        <button class="btn modal-confirm-button">Autorizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>