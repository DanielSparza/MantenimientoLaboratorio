{{!-- MODAL PARA ELIMINAR USUARIO --}}
<div class="modal fade" tabindex="-1" role="dialog" id="users-delete-modal{{id_usuario}}">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Eliminar usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Esta seguro de eliminar el {{rol}} {{id_usuario}}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn modal-confirm-button" data-dismiss="modal">Cancelar</button>
        <a href="/maintenance/usersdelete/{{id_usuario}}" class="btn btn-eliminar">Eliminar</a>
        {{!-- <button href="/maintenance/usersdelete/{{id_usuario}}" type="button" class="btn btn-eliminar">Eliminar</button> --}}
      </div>
    </div>
  </div>
</div>