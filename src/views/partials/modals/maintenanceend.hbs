{{!-- MODAL PARA FINALIZAR UN MANTENIMIENTO --}}
<div class="modal fade" tabindex="-1" role="dialog" id="maintenanceuser-edit-modal{{id_mantenimiento}}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Finalizar mantenimiento: {{id_mantenimiento}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/maintenance/maintenanceuserend/{{id_mantenimiento}}" method="post">
                    <div class="form-group modal-body">
                        <label for="recipient-name" class="col-form-label">Observaciones</label>
                        <textarea name="observaciones" rows="2" class="form-control"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn modal-confirm-button" data-dismiss="modal">Cancelar</button>
                        <button  class="btn modal-confirm-button">Finalizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>