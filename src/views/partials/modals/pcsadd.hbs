{{!-- MODAL PARA AGREGAR UNA NUEVA COMPUTADORA--}}
<div class="modal fade" id="pcs-add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar computadora</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/maintenance/pcsadd" method="post">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Número de serie</label>
                        <input type="text" class="form-control" id="recipient-name" name="numserie">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Marca</label>
                        <input type="text" class="form-control" id="recipient-name" name="marca">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Monitor</label>
                        <input type="text" class="form-control" id="recipient-name" name="monitor">
                    </div>
                     <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Memoria</label>
                        <input type="text" class="form-control" id="recipient-name" name="memoria">
                    </div>
                     <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Procesador</label>
                        <input type="text" class="form-control" id="recipient-name" name="procesador">
                    </div>
                     <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tipo de conexión</label>
                        <input type="text" class="form-control" id="recipient-name" name="tipoconexion">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Laboratorio</label>
                        <select class="custom-select" id="inputGroupSelect02" name="fk_laboratorio">
                            {{#each labs}}
                            <option value="{{id_laboratorio}}">{{descripcion}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button  class="btn modal-confirm-button">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>